<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        {{#if articles}}
        {{#each article}}
          <div class="card w-90">
                <div class="card-header text-white bg-primary">
                    <a href={{link}} target="_blank" class="text-white">
                        <h2>{{title}}</h2>
                    </a>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        summary
                    </p>
                    <button id="{{_id}}" class="btn btn-primary save-btn">Save Article</button>
                </div>
            </div>
        {{/each}}
        {{else}}
            <div class="card text-white bg-warning w-90 p-1">
                <div class="card-body text-center">
                    Uh oh. Looks like we don't have any new articles
                </div>
            </div>
        {{/if}}

      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>
